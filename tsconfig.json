{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "jsx": "react",
    "noUnusedLocals": true,
    // "rootDir": "src",
    "typeRoots": ["node_modules/@types", "src/abstracts/index.ts"],
    "paths": {
      "vantage_demo_template_test": ["dist/index.d.ts"]
    }
  },
  "include": ["src", "tailwind.config.ts", "./types/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
